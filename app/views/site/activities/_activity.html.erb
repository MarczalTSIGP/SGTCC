<tr class="<%= activity_status_class(activity) %>">
  <td>
      <% if activity.base_activity_type.name == "Envio de documento" %>
        <i class="fas fa-file-upload"></i>
      <% else %>
        <i class="fas fa-info"></i>
      <% end %>
      <%= activity.name %>
   </td>
  <td><%= activity.deadline %></td>
</tr>
