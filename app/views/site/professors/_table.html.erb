<div class="text-right mt-3">
  <%= page_entries_info professors.page(params[:page]).per(professors.size) %>
</div>

<div class="site-table table-striped table-responsive w-100 mt-5">
  <table class="border border-gray card-table table-vcenter">
    <thead>
      <tr>
        <th></th>
        <th><%= Professor.human_attribute_name('name') %></th>
        <th><%= Professor.human_attribute_name('email') %></th>
        <th><%= Professor.human_attribute_name('lattes') %></th>
        <th class="w-1"><%= Professor.human_attribute_name('available_advisor') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <%= render('shared/no_results') if professors.empty? %>
      </tr>
      <% professors.each do |professor| %>
        <%= render('site/professors/professor', professor: professor) %>
      <% end %>
    </tbody>
  </table>
</div>
