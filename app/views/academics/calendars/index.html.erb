<% provide(:page_title, t('breadcrumbs.calendars.index')) %>
<% provide(:head_title, t('breadcrumbs.calendars.index')) %>

<div class="table-striped mt-5 table-responsive w-100">
  <table class="table card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th><%= Calendar.human_attribute_name('year_semester') %></th>
        <th><%= Calendar.human_attribute_name('tcc') %></th>
        <th><%= Orientation.human_attribute_name('title') %></th>
        <th><%= Orientation.human_attribute_name('advisor') %></th>
        <th><%= Orientation.human_attribute_name('orientation_supervisors') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <%= render('shared/no_results') if @orientations.empty? %>
      </tr>
      <% @orientations.each do |orientation| %>
        <%= render('academics/calendars/calendar', orientation: orientation) %>
      <% end %>
    </tbody>
  </table>
</div>
