<%= simple_form_for(@document, url: academics_tep_requests_path) do |f| %>
  <%= f.input :justification,
    as: :text,
    input_html: { rows: '8', class: 'markdown-editor' } %>

  <div class="d-flex">
    <%= link_to t('simple_form.buttons.back'),
      academics_tep_requests_path,
      class: 'btn btn-secondary' %>

      <%= f.button :submit, 'Solicitar', class: 'btn btn-primary ml-auto' %>
  </div>
<% end %>
