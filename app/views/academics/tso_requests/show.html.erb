<% provide(:page_title, t('breadcrumbs.documents.requests.tep.show')) %>
<% provide(:head_title, t('breadcrumbs.documents.requests.tep.show')) %>

<div class="card">
  <div class="card-body">
    <p>
      <strong>
        <%= Document.human_attribute_name('orientation') %>
      </strong>
      <%= @document.orientation.title %>
    </p>
    <p>
      <strong>
        <%= Document.human_attribute_name('advisor') %>
      </strong>
      <%= @document.orientation.advisor.name %>
    </p>
    <p>
      <strong>
        <%= Document.human_attribute_name('new_advisor') %>
      </strong>
      <%= @document.request['new_orientation']['advisor']['name'] %>
    </p>
    <% unless @document.request['new_orientation']['professorSupervisors'].empty? %>
      <p>
        <strong>
          <%= Document.human_attribute_name('professor_supervisor_ids') %>:
        </strong>
        <% @document.request['new_orientation']['professorSupervisors'].each do |supervisor| %>
          <%= supervisor['name'] %>
        <% end %>
      </p>
    <% end %>
    <% unless @document.request['new_orientation']['externalMemberSupervisors'].empty? %>
      <p>
        <strong>
          <%= Document.human_attribute_name('external_member_supervisor_ids') %>:
        </strong>
        <% @document.request['new_orientation']['externalMemberSupervisors'].each do |supervisor| %>
          <%= supervisor['name'] %>
        <% end %>
      </p>
    <% end %>
    <p>
      <strong>
        <%= Document.human_attribute_name('justification') %>:
      </strong>
      <markdown-reader
        content="<%= @document.request['requester']['justification'] %>" />
    </p>
    <p>
      <strong>
        <%= Document.human_attribute_name('created_at') %>:
      </strong>
      <%= complete_date(@document.created_at) %>
    </p>
    <p>
      <strong>
        <%= Document.human_attribute_name('updated_at') %>:
      </strong>
      <%= complete_date(@document.updated_at) %>
    </p>
  </div>
</div>

<div class="d-flex">
  <%= link_to t('simple_form.buttons.back'),
    academics_tso_requests_path,
    class: 'btn btn-secondary' %>

  <%= link_to t('simple_form.buttons.edit'),
    edit_academics_tso_request_path(@document),
    class: 'btn btn-primary ml-auto' %>
</div>

