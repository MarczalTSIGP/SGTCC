<% provide(:page_title, t('breadcrumbs.documents.requests.tso.edit')) %>
<% provide(:head_title, t('breadcrumbs.documents.requests.tso.edit')) %>

<%= simple_form_for(@document, url: academics_tso_request_path(@document)) do |f| %>
  <div class="row">
    <div class="col-12">
      <%= f.input :justification,
        as: :text,
        input_html: {
          rows: '8',
          class: 'markdown-editor',
          value: @document.request['requester']['justification']
        } %>
    </div>
  </div>

  <div class="d-flex">
    <%= link_to t('simple_form.buttons.back'),
      academics_tso_requests_path,
      class: 'btn btn-secondary' %>

      <%= f.button :submit, 'Solicitar', class: 'btn btn-primary ml-auto' %>
  </div>
<% end %>
