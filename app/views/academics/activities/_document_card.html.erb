<div class="card">
   <div class="card-header">
      <strong class="mr-1">
         <%= t("views.title.activities.send_document.#{current_academic.gender}") %>:
      </strong>
      <%= current_academic.name %>
   </div>
   <div class="card-body">
      <p>
         <strong>
            <%= AcademicActivity.human_attribute_name("#{@activity.identifier}_title") %>:
         </strong>
         <%= @academic_activity.title %>
      </p>
      <p>
         <strong>
            <%= AcademicActivity.human_attribute_name("#{@activity.identifier}_summary") %>:
         </strong>
         <%= @academic_activity.summary %>
      </p>
      <p>
         <strong>
            <%= AcademicActivity.human_attribute_name("sent_#{@activity.identifier}_pdf") %>:
         </strong>
         <%= link_to(@academic_activity.pdf.url, target: :_blank) do %>
            <span class="icon mr-1">
               <i class="fas fa-file-pdf"></i>
            </span>
            <%= @academic_activity.pdf_identifier %>
         <% end %>
      </p>
      <% if @academic_activity.complementary_files.present? %>
         <p>
            <strong>
               <%= AcademicActivity.human_attribute_name("sent_#{@activity.identifier}_complementary_files") %>:
            </strong>
            <%= link_to(@academic_activity.complementary_files.url, target: :_blank) do %>
               <%= @academic_activity.complementary_files_identifier %>
            <% end %>
         </p>
      <% end %>
   </div>
</div>

<% if @academic_activity.additional_instructions.present? %>
   <div class="card">
      <div class="card-header">
         <strong class="mr-1">
            <%= AcademicActivity.human_attribute_name("#{@activity.identifier}_additional_instructions") %>
         </strong>
      </div>

      <div class="card-body">
         <p>
            <markdown-reader content="<%= @academic_activity.additional_instructions %>" />
            </p>
         </div>
      </div>
   <% end %>
