<%= simple_form_for(@academic_activity,
                    url: academics_calendar_activity_files_path(@calendar, @activity)) do |f| %>
  <div class="row">
    <div class="col-12">
      <%= f.input :title %>
    </div>
    <div class="col-12">
      <%= f.input :summary %>
    </div>

    <div class="col-md-6">
      <%= f.input :pdf %>
    </div>
    <div class="col-md-6">
      <%= f.input :complementary_files %>
    </div>

    <%= f.input :activity_id,
      as: :hidden,
      input_html: { value: @activity.id } %>

    <%= f.input :academic_id,
      as: :hidden,
      input_html: { value: current_academic.id } %>

    <div class="col-12 mt-2">
      <%= f.button :submit,
        t('views.buttons.save'),
        class: 'btn btn-primary float-right' %>
    </div>
  </div>
<% end %>

