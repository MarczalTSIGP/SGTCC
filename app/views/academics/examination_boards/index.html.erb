<% provide(:page_title, t('breadcrumbs.examination_boards.index')) %>
<% provide(:head_title, t('breadcrumbs.examination_boards.index')) %>

<div class="row">
  <div class="col-12">
    <search url="<%= academics_examination_boards_search_path %>" search-term="<%= params[:term] %>" />
  </div>
</div>

<div class="text-right mt-3">
  <%= page_entries_info @examination_boards %>
</div>

<div class="table-striped mt-3 table-responsive w-100">
  <table class="table card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th><%= ExaminationBoard.human_attribute_name('orientation') %></th>
        <th><%= ExaminationBoard.human_attribute_name('place') %></th>
        <th><%= ExaminationBoard.human_attribute_name('date') %></th>
        <th><%= ExaminationBoard.human_attribute_name('professors') %></th>
        <th><%= ExaminationBoard.human_attribute_name('external_members') %></th>
        <th><%= ExaminationBoard.human_attribute_name('tcc') %></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <%= render('shared/no_results') if @examination_boards.empty? %>
      </tr>
      <%= render @examination_boards %>
    </tbody>
  </table>
</div>

<%= paginate @examination_boards %>
