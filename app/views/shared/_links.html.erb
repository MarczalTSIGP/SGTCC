<%= link_to(resource_link) do %>
  <i class="fe fe-search" data-toggle="tooltip" title="<%= t('titles.show') %>"></i>
<% end %>

<%= link_to(edit_link) do %>
  <i class="fe fe-edit" data-toggle="tooltip" title="<%= t('titles.edit') %>"></i>
<% end %>

<%= link_to resource_link,
  method: :delete,
  data: { confirm: t('prompt.confirm') },
  class: 'destroy' do %>
  <i class="fe fe-trash" data-toggle="tooltip" title="<%= t('titles.delete') %>"></i>
<% end %>

