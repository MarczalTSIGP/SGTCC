<div class="card">
  <div class="card-header">
    <strong class="mr-1">
      <%= t("views.title.activities.send_document.#{academic_activity.academic.gender}") %>:
    </strong>
    <%= academic_activity.academic.name %>
  </div>
  <div class="card-body">
    <p>
      <strong>
        <%= AcademicActivity.human_attribute_name("#{identifier}_title") %>:
      </strong>
      <%= academic_activity.title %>
    </p>
    <p>
      <strong>
        <%= AcademicActivity.human_attribute_name("#{identifier}_summary") %>:
      </strong>
      <%= academic_activity.summary %>
    </p>
    <p>
      <%= link_to(academic_activity.pdf.url, target: :_blank) do %>
        <span class="icon mr-1">
          <i class="fas fa-file-pdf"></i>
        </span>
        <%= AcademicActivity.human_attribute_name("sent_#{identifier}_pdf") %>
      <% end %>
    </p>
    <% if academic_activity.complementary_files.present? %>
      <p>
        <%= link_to(academic_activity.complementary_files.url, target: :_blank) do %>
          <%= AcademicActivity.human_attribute_name("sent_#{identifier}_complementary_files") %>
        <% end %>
      </p>
    <% end %>
  </div>

  <% if academic_activity.additional_instructions.present? %>
    <div class="card-header border-top">
      <strong class="mr-1">
        <%= AcademicActivity.human_attribute_name("#{academic_activity.activity.identifier}_additional_instructions") %>
      </strong>
    </div>

    <div class="card-body">
      <p>
        <markdown-reader content="<%= academic_activity.additional_instructions %>" />
      </p>
    </div>
  <% end %>
</div>
