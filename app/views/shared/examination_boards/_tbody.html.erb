<td class="text-center">
  <examination-board-status
    date="<%= I18n.l(examination_board.date, format: :intl) %>"
    time="<%= I18n.l(examination_board.date, format: :time) %>"
    distance-in-words="<%= distance_of_time_in_words(datetime(examination_board.date), Time.current) %>" />
</td>
<td>
  <span data-toggle="tooltip" title="<%= examination_board.orientation.title %>">
    <%= examination_board.orientation.academic_with_calendar %>
  </span>
</td>
<td><%= examination_board.place %></td>
<td><%= datetime(examination_board.date) %></td>
<td><%= examination_board.orientation.advisor.name_with_scholarity %></td>
<td>
  <% unless examination_board.professors.empty? %>
    <b><%= ExaminationBoard.human_attribute_name('professors') %></b>
    <% examination_board.professors.each do |professor| %>
      <p class="m-0"><%= professor.name_with_scholarity %></p>
    <% end %>
  <% end %>
  <br>
  <% unless examination_board.external_members.empty? %>
    <b><%= ExaminationBoard.human_attribute_name('external_members') %></b>
    <% examination_board.external_members.each do |external_member| %>
      <p class="m-0"><%= external_member.name_with_scholarity %></p>
    <% end %>
  <% end %>
</td>
