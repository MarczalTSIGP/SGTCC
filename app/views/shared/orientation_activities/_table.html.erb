<% provide(:head_title, t("views.title.calendar.tcc.#{@calendar.tcc}", calendar: @calendar.year_with_semester)) %>
<% provide :page_title do %>
  <%= t("views.title.calendar.tcc.#{@calendar.tcc}", calendar: @calendar.year_with_semester) %>
