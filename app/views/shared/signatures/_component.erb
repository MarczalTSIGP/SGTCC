<% if @signature.document.document_type.id == DocumentType.first&.id %>
  <term-of-commitment
    orientation-title="<%= @signature.orientation.title %>"
    document-title="<%= @signature.document.document_type.name %>"
    date="<%= short_date(@signature.updated_at) %>"
    time="<%= l(@signature.updated_at, format: :time) %>"
    :signed="<%= @signature.status %>"
    :academic="<%= @signature.orientation.academic.to_json %>"
    :advisor="<%= @signature.orientation.advisor.to_json %>"
    :professor-supervisors="<%= @signature.orientation.professor_supervisors.to_json %>"
    :external-member-supervisors="<%= @signature.orientation.external_member_supervisors.to_json %>" />
<% end %>
