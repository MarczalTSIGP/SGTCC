<div class="card mt-3">
  <div class="card-body">
   <div class="clearfix"></div>
    <div class="row mb-3">
      <div class="rol-6">
        <strong class="ml-3 mr-2">
          <%= Orientation.human_attribute_name('status') %>:
        </strong>
      </div>
      <div class="rol-6">
        <div>
          <orientation-status
            status="<%= Orientation.statuses[@orientation.status] %>"
            label="<%= @orientation.status %>" />
        </div>
      </div>
    </div>
    <p>
      <strong>
        <%= Orientation.human_attribute_name('title') %>:
      </strong>
      <%= @orientation.title %>
    </p>
    <p>
      <strong>
        <%= Orientation.human_attribute_name('calendar') %>:
      </strong>
      <%= @orientation.calendar.year_with_semester_and_tcc %>
    </p>
    <p>
      <strong>
        <%= Orientation.human_attribute_name('academic') %>:
      </strong>
      <%= @orientation.academic.name %>
    </p>
    <p>
      <strong>
        <%= Orientation.human_attribute_name('advisor') %>:
      </strong>
      <%= @orientation.advisor.name %>
    </p>
    <% unless @orientation.professor_supervisors.empty? %>
      <p>
        <strong>
          <%= Orientation.human_attribute_name('professor_supervisors') %>:
        </strong>
        <% @orientation.professor_supervisors.each do |supervisor| %>
          <%= supervisor.name %>
        <% end %>
      </p>
    <% end %>
    <% unless @orientation.external_member_supervisors.empty? %>
      <p>
        <strong>
          <%= Orientation.human_attribute_name('external_member_supervisors') %>:
        </strong>
        <% @orientation.external_member_supervisors.each do |supervisor| %>
          <%= supervisor.name %>
        <% end %>
      </p>
    <% end %>
    <% if @orientation.institution %>
      <p>
        <strong>
          <%= Orientation.human_attribute_name('institution') %>:
        </strong>
        <%= @orientation.institution.trade_name %>
      </p>
    <% end %>
    <p>
      <strong>
        <%= Orientation.human_attribute_name('created_at') %>:
      </strong>
      <%= complete_date(@orientation.created_at) %>
    </p>
    <p>
      <strong>
        <%= Orientation.human_attribute_name('updated_at') %>:
      </strong>
      <%= complete_date(@orientation.updated_at) %>
    </p>
  </div>
</div>

<div class="mt-2">
  <orientation-renew
    :id="<%= @orientation.id %>"
    label="<%= Orientation.human_attribute_name('renewal_justification') %>"
    :has-permission="<%= @orientation.can_be_renewed?(current_professor) %>"
    error-message="<%= t('errors.messages.blank') %>" />
</div>

<div class="mt-3">
  <orientation-cancel
    :id="<%= @orientation.id %>"
    label="<%= Orientation.human_attribute_name('cancellation_justification') %>"
    error-message="<%= t('errors.messages.blank') %>"
    :has-permission="<%= @orientation.can_be_canceled?(current_professor) %>" />
</div>

<div class="mt-3">
  <orientation-abandon
    :id="<%= @orientation.id %>"
    label="<%= Orientation.human_attribute_name('abandonment_justification') %>"
    error-message="<%= t('errors.messages.blank') %>"
    :has-permission="<%= @orientation.can_be_abandoned?(current_professor) %>" />
</div>

<div class="clearfix"></div>

<div class="mt-4 d-flex">
  <%= link_to t('simple_form.buttons.back'), back_url, class: 'btn btn-secondary' %>
  <% if @orientation.can_be_edited? %>
    <%= yield(:edit_button) %>
  <% end %>
</div>
