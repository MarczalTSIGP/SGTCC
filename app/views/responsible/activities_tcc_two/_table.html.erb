<div class="table-striped mt-3 table-responsive w-100">
  <table class="table card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th><%= Activity.human_attribute_name('name') %></th>
        <th><%= Activity.human_attribute_name('base_activity_type') %></th>
        <th><%= Activity.human_attribute_name('tcc') %></th>
        <th><%= Activity.human_attribute_name('created_at') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <%= render('shared/no_results') if @activities.empty? %>
      </tr>
      <% @activities.each do |activity| %>
        <tr>
          <td><%= activity.name %></td>
          <td><%= activity.base_activity_type.name %></td>
          <td><%= t("enums.tcc.#{activity.tcc}") %></td>
          <td><%= l(activity.created_at, format: :short) %></td>
          <td>
            <%= link_to(responsible_calendar_activities_tcc_two_path(@calendar, activity)) do %>
              <i class="fe fe-search" data-toggle="tooltip" title="Show"></i>
            <% end %>
            <%= link_to(edit_responsible_calendar_activities_tcc_two_path(@calendar, activity)) do %>
              <i class="fe fe-edit" data-toggle="tooltip" title="Editar"></i>
            <% end %>
            <%= link_to responsible_calendar_activities_tcc_two_path(@calendar, activity),
              method: :delete,
              data: { confirm: t('prompt.confirm') },
              class: 'destroy' do %>
              <i class="fe fe-trash" data-toggle="tooltip" title="Delete"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
