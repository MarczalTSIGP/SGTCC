<% provide(:page_title, t('breadcrumbs.pages.index')) %>
<% provide(:head_title, t('breadcrumbs.pages.index')) %>

<div class="row">
  <div class="col-sm-12 col-lg-8 mb-2">
    <search url="<%= responsible_pages_search_path %>" search-term="<%= params[:term] %>" />
  </div>
  <div class="col-sm-12 col-lg-4">
    <%= link_to(new_responsible_page_path, class: 'btn btn-outline-primary d-block') do %>
      <i class="fe fe-plus"></i>
      <%= t('breadcrumbs.pages.new') %>
    <% end %>
  </div>
</div>

<div class="text-right mt-3">
  <%= page_entries_info @pages %>
</div>

<div class="table-striped mt-3 table-responsive w-100">
  <table class="table card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th><%= Page.human_attribute_name('title') %></th>
        <th><%= Page.human_attribute_name('published') %></th>
        <th><%= Page.human_attribute_name('created_at') %></th>
        <th><%= Page.human_attribute_name('updated_at') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <%= render('shared/no_results') if @pages.empty? %>
      </tr>
      <%= render partial: 'page', collection: @pages %>
    </tbody>
  </table>
</div>

<%= paginate @pages %>
