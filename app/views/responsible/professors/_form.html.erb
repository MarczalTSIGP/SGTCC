<%= simple_form_for [:responsible, @professor] do |f| %>
  <div class="form-inputs">
    <div class="row">
      <div class="col-6">
        <%= f.input :name %>
      </div>
      <div class="col-6">
        <%= f.input :email %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= f.input :username %>
      </div>
      <div class="col-6">
        <%= f.input :lattes %>
      </div>
    </div>

    <div class="row">
      <div class="col-4">
        <%= f.association :professor_title,
          prompt: t('prompt.select.m', name: 'tÃ­tulo') %>
      </div>
      <div class="col-4">
        <%= f.association :professor_type,
          prompt: t('prompt.select.m', name: 'tipo') %>
      </div>
      <div class="col-4">
        <%= f.association :professor_role,
          prompt: t('prompt.select.m', name: 'papel') %>
      </div>
    </div>

    <%= f.input :gender,
                as: :radio_buttons,
                collection: Professor.human_genders,
                item_wrapper_class: 'custom-control custom-radio custom-control-inline' %>

    <%= f.input :is_active, as: :checkbox_tabler %>
    <%= f.input :available_advisor, as: :checkbox_tabler %>

    <%= f.input :working_area, input_html: { class: 'markdown-editor' } %>
  </div>

  <div class="d-flex">
    <%= link_to t('simple_form.buttons.back'),
      responsible_professors_path,
      class: 'btn btn-secondary' %>

    <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
  </div>
<% end %>
