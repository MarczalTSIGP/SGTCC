<%= simple_form_for [:responsible, @activity] do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :base_activity_type,
      prompt: t('prompt.select.m', name: 'tipo') %>
    <%= f.input :tcc,
                as: :radio_button_tabler,
                collection: Activity.human_tccs %>
    <%= f.input :calendar_id,
                as: :hidden,
                input_html: { value: Calendar.current_calendar_id_by_tcc } %>
  </div>

  <div class="d-flex">
    <%= link_to t('simple_form.buttons.back'),
      responsible_activities_path,
      class: 'btn btn-secondary' %>

    <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
  </div>
<% end %>
