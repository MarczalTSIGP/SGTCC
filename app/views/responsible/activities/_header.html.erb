<div class="row">
  <div class="mb-2 col-12 col-sm-8">
    <%= simple_form_for(Activity.model_name.param_key,
                        url: responsible_calendar_activities_by_calendar_path) do |f| %>
      <div class="mb-2">
        <%= f.input :calendar,
          as: :select,
          collection: Calendar.select_data(@calendar.tcc),
          class: 'form-control',
          input_html: { data: 'calendar-selectize' },
          label: false,
          label_method: :second,
          value_method: :first,
          selected: @calendar.id,
          prompt: t('prompt.select.f', name: Activity.human_attribute_name('calendar')) %>
      </div>
      <%= f.button :submit,
        t('views.buttons.select'),
        class: 'd-none' %>
    <% end %>
  </div>
  <div class="col-12 col-sm-4 mb-5">
    <%= link_to(new_responsible_calendar_activity_path(@calendar), class: 'btn btn-outline-primary d-block') do %>
      <i class="fe fe-plus"></i>
      <%= t('breadcrumbs.activities.new') %>
    <% end %>
  </div>
</div>

