<% provide(:page_title, t('breadcrumbs.activities.index')) %>
<% provide(:head_title, t('breadcrumbs.activities.index')) %>

<div class="row">
  <div class="col-8">
    <search url="<%= responsible_activities_search_path %>" search-term="<%= params[:term] %>" />
  </div>
  <div class="col-4">
    <%= link_to(new_responsible_activity_path, class: 'btn btn-outline-primary d-block') do %>
      <i class="fe fe-plus"></i>
      <%= t('breadcrumbs.activities.new') %>
    <% end %>
  </div>
</div>

<div class="text-right mt-3">
  <%= page_entries_info @activities %>
</div>

<div class="table-striped mt-3 table-responsive w-100">
  <table class="table card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th><%= Activity.human_attribute_name('name') %></th>
        <th><%= Activity.human_attribute_name('activity_type') %></th>
        <th><%= Activity.human_attribute_name('created_at') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <%= render('shared/no_results') if @activities.empty? %>
      </tr>
      <%= render @activities %>
    </tbody>
  </table>
</div>

<%= paginate @activities %>
