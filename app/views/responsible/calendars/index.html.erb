<% provide(:page_title, t('breadcrumbs.calendars.index')) %>
<% provide(:head_title, t('breadcrumbs.calendars.index')) %>

<%= link_to(new_responsible_calendar_path, class: 'btn btn-outline-primary d-block') do %>
  <i class="fe fe-plus"></i>
  <%= t('breadcrumbs.calendars.new') %>
<% end %>

<div class="table-striped mt-3 table-responsive w-100">
  <table class="table card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th><%= Calendar.human_attribute_name('year') %></th>
        <th><%= Calendar.human_attribute_name('tcc') %></th>
        <th><%= Calendar.human_attribute_name('semester') %></th>
        <th><%= Calendar.human_attribute_name('created_at') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <%= render('shared/no_results') if @calendars.empty? %>
      </tr>
      <%= render @calendars %>
    </tbody>
  </table>
</div>
