<%= simple_form_for [:responsible, @academic] do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :ra %>
    <%= f.input :gender,
                as: :radio_button_tabler,
                collection: Academic.human_genders,
                item_wrapper_class: 'custom-control custom-radio custom-control-inline' %>
  </div>

  <div class="d-flex">
    <%= link_to t('simple_form.buttons.back'), responsible_academics_path, class: 'btn btn-secondary' %>

    <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
  </div>
<% end %>
