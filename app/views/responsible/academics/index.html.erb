<% provide(:page_title, t('breadcrumbs.academics.index')) %>
<% provide(:head_title, t('breadcrumbs.academics.index')) %>

<div class="row">
  <div class="col-sm-12 col-lg-8 mb-2">
    <search url="<%= responsible_academics_search_path %>" search-term="<%= params[:term] %>" />
  </div>
  <div class="col-sm-12 col-lg-4">
    <%= link_to(new_responsible_academic_path, class: 'btn btn-outline-primary d-block') do %>
      <i class="fe fe-plus"></i>
      <%= t('breadcrumbs.academics.new') %>
    <% end %>
  </div>
</div>

<div class="text-right mt-3">
  <%= page_entries_info @academics %>
</div>

<div class="table-striped mt-3 table-responsive w-100">
  <table class="table card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th><%= Academic.human_attribute_name('name') %></th>
        <th><%= Academic.human_attribute_name('email') %></th>
        <th><%= Academic.human_attribute_name('ra') %></th>
        <th><%= Academic.human_attribute_name('created_at') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <%= render('shared/no_results') if @academics.empty? %>
      </tr>
      <%= render @academics %>
    </tbody>
  </table>
</div>

<%= paginate @academics %>
