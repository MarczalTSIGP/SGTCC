<% provide(:page_title, t('breadcrumbs.base_activities.show')) %>
<% provide(:head_title, t('breadcrumbs.base_activities.show')) %>

<div class="card card-profile">
  <div class="card-body text-center">
    <p>
      <strong>
        <%= BaseActivity.human_attribute_name('name') %>:
      </strong>
      <%= @base_activity.name %>
    </p>
    <p>
      <strong>
        <%= BaseActivity.human_attribute_name('base_activity_type') %>:
      </strong>
      <%= @base_activity.base_activity_type.name %>
    </p>
    <p>
      <strong>
        <%= BaseActivity.human_attribute_name('created_at') %>:
      </strong>
      <%= complete_date(@base_activity.created_at) %>
    </p>
    <p>
      <strong>
        <%= BaseActivity.human_attribute_name('updated_at') %>:
      </strong>
      <%= complete_date(@base_activity.updated_at) %>
    </p>
  </div>
</div>

<div class="d-flex">
  <%= link_to t('simple_form.buttons.back'),
    responsible_base_activities_path,
    class: 'btn btn-secondary' %>

  <%= link_to t('simple_form.buttons.edit'),
    edit_responsible_base_activity_path(@base_activity),
    class: 'btn btn-primary ml-auto' %>
</div>

