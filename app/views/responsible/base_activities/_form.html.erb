<%= simple_form_for [:responsible, @base_activity] do |f| %>
  <div class="form-inputs">
    <div class="row">
      <div class="col-md-6">
        <%= f.input :name %>
      </div>
      <div class="col-md-6">
        <%= f.association :base_activity_type,
          input_html: { data: 'selectize' },
          prompt: t('prompt.select.m', name: 'tipo') %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :identifier,
          as: :radio_button_tabler,
          collection: BaseActivity.human_tcc_identifiers, wrapper_html: { class: display_activities_options } %>
      </div>

      <div class="col-md-6">
        <%= f.input :tcc,
          as: :radio_button_tabler,
          collection: BaseActivity.human_tccs %>
      </div>
    </div>

    <%= f.input :judgment, as: :checkbox_tabler, wrapper_html: { class: display_activities_options } %>
    <%= f.input :final_version, as: :checkbox_tabler, wrapper_html: { class: display_activities_options } %>
  </div>

  <div class="d-flex">
    <%= link_to t('simple_form.buttons.back'),
      responsible_base_activities_tcc_one_path,
      class: 'btn btn-secondary' %>

    <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
  </div>
<% end %>
