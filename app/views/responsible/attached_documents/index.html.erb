<% provide(:page_title, t('breadcrumbs.attached_documents.index')) %>
<% provide(:head_title, t('breadcrumbs.attached_documents.index')) %>

<div class="row">
  <div class="col-sm-12 col-lg-8 mb-2">
    <search url="<%= responsible_attached_documents_search_path %>" search-term="<%= params[:term] %>" />
  </div>
  <div class="col-sm-12 col-lg-4">
    <%= link_to(new_responsible_attached_document_path, class: 'btn btn-outline-primary d-block') do %>
      <i class="fe fe-plus"></i>
      <%= t('breadcrumbs.attached_documents.new') %>
    <% end %>
  </div>
</div>

<div class="text-right mt-3">
  <%= page_entries_info @attached_documents %>
</div>

<div class="table-striped mt-3 table-responsive w-100">
  <table class="table card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th><%= AttachedDocument.human_attribute_name('name') %></th>
        <th><%= AttachedDocument.human_attribute_name('created_at') %></th>
        <th><%= AttachedDocument.human_attribute_name('updated_at') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <%= render('shared/no_results') if @attached_documents.empty? %>
      </tr>
      <%= render @attached_documents %>
    </tbody>
  </table>
</div>

<%= paginate @attached_documents %>
