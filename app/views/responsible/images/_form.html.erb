<%= simple_form_for [:responsible, @image] do |f| %>
  <div class="row form-inputs">
    <div class="col-md-6">
      <%= f.input :name %>
    </div>
    <div class="col-md-6">
      <%= f.input :url, as: :file %>
    </div>
  </div>

  <div class="d-flex">
    <%= link_to t('simple_form.buttons.back'),
      responsible_images_path,
      class: 'btn btn-secondary' %>

    <%= f.button :submit, t('views.buttons.save'), class: 'btn btn-primary ml-auto' %>
  </div>
<% end %>
