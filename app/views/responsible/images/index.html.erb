<% provide(:page_title, t('breadcrumbs.images.index')) %>
<% provide(:head_title, t('breadcrumbs.images.index')) %>

<div class="row">
  <div class="col-sm-12 col-lg-8 mb-2">
    <search url="<%= responsible_images_search_path %>" search-term="<%= params[:term] %>" />
  </div>
  <div class="col-sm-12 col-lg-4">
    <%= link_to(new_responsible_image_path, class: 'btn btn-outline-primary d-block') do %>
      <i class="fe fe-plus"></i>
      <%= t('breadcrumbs.images.new') %>
    <% end %>
  </div>
</div>

<div class="text-right mt-3">
  <%= page_entries_info @images %>
</div>

<div class="row row-cards">
  <%= render @images %>
</div>

<%= paginate @images %>
