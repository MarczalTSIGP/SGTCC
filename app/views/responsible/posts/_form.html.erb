<%= simple_form_for [:responsible, @post] do |f| %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content, input_html: { class: 'markdown-editor' } %>
  </div>

  <div class="d-flex">
    <%= link_to t('simple_form.buttons.back'),
      responsible_posts_path,
      class: 'btn btn-secondary' %>

    <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
  </div>
<% end %>
