<% provide(:title, t(".sign_in")) %>
<% provide(:head_title, t(".sign_in")) %>

<%= simple_form_for(resource, as: resource_name, url: responsible_session_path) do |f| %>
  <div class="form-inputs">
    <%= f.input :username, required: false, autofocus: true %>
    <%= f.input :password, required: false %>

    <%= f.input :remember_me, as: :checkbox_tabler if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(".sign_in"), class: 'btn-primary btn-block' %>
  </div>
<% end %>

