<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>
      <%= full_title(yield(:head_title)) %>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'public/application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= favicon_link_tag %>
  </head>
  <body>
    <div id="app" class="page">
      <div class="page-main">
        <%= render 'layouts/site/header' %>
        <div class="container">
          <%= render 'shared/alert_messages' %>
          <div class="row">
            <%= render 'layouts/site/sidebar' %>
            <div class="col-md-9">
              <div class="card" id="main-card">
                <div class="card-body">
                  <div class="text-wrap p-lg-6">
                    <table-name-avatar 
               url="https://avatars.githubusercontent.com/u/16666593?v=4"
               name="Diego">
                    </table-name-avatar>
                    {{message}}
                    <%= yield %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%= render 'layouts/site/footer' %>
    </div>
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script>
      const TableNameAvatar = {
        props: {
          url: {
            type: String,
            required: true
          },
          name: {
            type: String,
            required: true
          },
        },
        computed: {
          spanClass() {
            return { 'backgroundImage': `url(../${this.url})` };
          },
        },
        template:`<div class="d-flex">
                    <div class="mb-2">
                      <span class="avatar" :style="spanClass" />
                    </div>
                    <div class="ml-2 mt-2">
                      {{ name }}
                    </div>
                  </div>`
      };

      const app = Vue.createApp({
        components: {
          TableNameAvatar
        },
        data() {
          return {
            message: "Hello World!"
          }
        }
      });

      app.mount('#app');

       document.querySelectorAll(".show-eb-details").forEach(function(element) {
        element.addEventListener("click", function(event) {
          const ebId = this.dataset.ebId;
          const el = document.getElementById("eb-" + ebId);
          if (el.classList.contains("d-none")) {
            el.classList.remove("d-none");
          } else {
            el.classList.add("d-none");
          }
          event.preventDefault();
        });
      });
    </script>
  </body>
</html>
