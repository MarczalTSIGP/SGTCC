<!DOCTYPE html>
<html>
	<head>
		<title>
			<%= full_title(yield(:head_title)) %>
		</title>
		<%= csrf_meta_tags %>

		<%= stylesheet_link_tag    'session', media: 'all', 'data-turbolinks-track': 'reload' %>

		<%= javascript_include_tag 'session', 'data-turbolinks-track': 'reload' %>

		<%= favicon_link_tag %>
	</head>

	<body>
		<div id="<%= controller_name %>-<%= action_name %>">

			<div class="page">
				<div class="page-single">
					<div class="container">

						<div class="row">
							<div class="col col-login mx-auto">
								<%= render 'shared/flash_messages'%>

								<div class="text-center mb-6">
									<%= image_tag("tsi.png", alt: "logo-tsi", class: 'header-brand-img') %>
								</div>

								<div class="card card-body p-6">
									<div class="card-title">
										<h4 class="text-center">
											<%= yield :title %>
										</h4>
									</div>

									<%= yield %>

								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</body>
</html>
