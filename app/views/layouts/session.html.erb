<!DOCTYPE html>
<html>
	<head>
		<title>
			<%= full_title(yield(:head_title)) %>
		</title>
		<%= csrf_meta_tags %>

		<%= stylesheet_link_tag    'session', media: 'all',
			'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'session',
			'data-turbolinks-track': 'reload' %>
</head>

<body>
	<div id="<%= controller_name %>-<%= action_name %>">

		<div class="page">
			<div class="page-single">
				<div class="container">

					<div class="row">
						<div class="col col-login mx-auto">
							<%= render 'shared/flash_messages'%>

							<div class="text-center mb-6">
								<%= image_tag("tsi.png", alt: "logo-tsi", class: 'header-brand-img') %>
							</div>

							<div class="card p-6">
									<div class="card-title">
										<h3 class="text-center"><%= yield :title %></h3>
									</div>
								<div class="card-body">
									<%= yield %>
								</div>
							</div>
						</div>
					</div><!-- div.row !-->

				</div><!-- div.container !-->
			</div><!-- div.page-single !-->
		</div><!-- div.page !-->

	</div><!-- div#id !-->
</body>
</html>

