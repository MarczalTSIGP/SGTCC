<% provide(:page_title, t("views.title.calendar.tcc.#{@calendar.tcc}", calendar: @calendar.year_with_semester)) %>
<% provide(:head_title, t("views.title.calendar.tcc.#{@calendar.tcc}", calendar: @calendar.year_with_semester)) %>

<div class="table-striped mt-3 table-responsive w-100">
  <table class="table card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th><%= Activity.human_attribute_name('name') %></th>
        <th><%= Activity.human_attribute_name('base_activity_type') %></th>
        <th><%= Activity.human_attribute_name('tcc') %></th>
        <th><%= Activity.human_attribute_name('deadline') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <%= render('shared/no_results') if @activities.empty? %>
      </tr>
      <% @activities.each do |activity| %>
        <%= render 'professors/supervision_activities/activity', activity: activity %>
      <% end %>
    </tbody>
  </table>
</div>
