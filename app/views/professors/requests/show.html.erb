<% provide(:page_title, t('breadcrumbs.documents.requests.tdo.show')) %>
<% provide(:head_title, t('breadcrumbs.documents.requests.tdo.show')) %>

<div class="card">
  <div class="card-body">
    <p>
      <strong>
        <%= Document.human_attribute_name('orientation') %>:
      </strong>
      <%= @document.orientation.title %>
    </p>
    <p>
      <strong>
        <%= Document.human_attribute_name('academic') %>:
      </strong>
      <%= @document.orientation.academic_with_calendar %>
    </p>
    <p>
      <strong>
        <%= Document.human_attribute_name('justification') %>:
      </strong>
      <markdown-reader
        content="<%= @document.request['requester']['justification'] %>" />
    </p>
    <p>
      <strong>
        <%= Document.human_attribute_name('created_at') %>:
      </strong>
      <%= complete_date(@document.created_at) %>
    </p>
    <p>
      <strong>
        <%= Document.human_attribute_name('updated_at') %>:
      </strong>
      <%= complete_date(@document.updated_at) %>
    </p>
  </div>
</div>

<div class="d-flex">
  <%= link_to t('simple_form.buttons.back'),
    professors_requests_path,
    class: 'btn btn-secondary' %>

  <%= link_to t('simple_form.buttons.edit'),
    edit_professors_request_path(@document),
    class: 'btn btn-primary ml-auto' %>
</div>
