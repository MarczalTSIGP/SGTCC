<% provide(:page_title, t('breadcrumbs.meetings.show')) %>
<% provide(:head_title, t('breadcrumbs.meetings.show')) %>

<div class="card">
  <div class="card-body">
    <p>
      <strong>
        <%= Meeting.human_attribute_name('academic') %>:
      </strong>
      <%= @meeting.orientation.academic_with_calendar %>
    </p>
    <p>
      <strong>
        <%= Meeting.human_attribute_name('orientation') %>:
      </strong>
      <%= @meeting.orientation.title %>
    </p>
    <p>
      <strong>
        <%= Meeting.human_attribute_name('content') %>:
      </strong>
      <div class="form-fieldset w-50 text-left">
        <vue-markdown-preview><%= @meeting.content %></vue-markdown-preview>
      </div>
    </p>
    <p>
      <strong>
        <%= Meeting.human_attribute_name('date') %>:
      </strong>
      <%= complete_date(@meeting.date) %>
    </p>
    <p>
      <strong>
        <%= Meeting.human_attribute_name('created_at') %>:
      </strong>
      <%= complete_date(@meeting.created_at) %>
    </p>
    <p>
      <strong>
        <%= Meeting.human_attribute_name('updated_at') %>:
      </strong>
      <%= complete_date(@meeting.updated_at) %>
    </p>
  </div>
</div>

<div class="d-flex">
  <%= link_to t('simple_form.buttons.back'),
    professors_meetings_path,
    class: 'btn btn-secondary' %>

  <%= link_to t('simple_form.buttons.edit'),
    edit_professors_meeting_path(@meeting),
    class: 'btn btn-primary ml-auto' %>
</div>

