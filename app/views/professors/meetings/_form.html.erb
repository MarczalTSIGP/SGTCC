<%= simple_form_for [:professors, @meeting] do |f| %>
  <div class="form-inputs">
    <%= f.association :orientation,
      input_html: { data: 'selectize' },
      collection: current_professor.orientations,
      prompt: t('prompt.select.f', name: Meeting.human_attribute_name('orientation')) %>

    <%= f.input :title %>
    <%= f.input :content, input_html: { class: 'markdown-editor' } %>
  </div>

  <div class="d-flex">
    <%= link_to t('simple_form.buttons.back'),
      professors_meetings_path,
      class: 'btn btn-secondary' %>

    <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
  </div>
<% end %>
