<tr>
  <td><%= meeting.title %></td>
  <td>
    <span data-toggle="tooltip" title="<%= meeting.orientation.title %>">
      <%= meeting.orientation.short_title %>
    </span>
  </td>
  <td><%= short_date(meeting.created_at) %></td>
  <td><%= short_date(meeting.updated_at) %></td>
  <td>
    <%= link_to(professors_meeting_path(meeting)) do %>
      <i class="fe fe-search" data-toggle="tooltip" title="Show"></i>
    <% end %>
    <%= link_to(edit_professors_meeting_path(meeting)) do %>
      <i class="fe fe-edit" data-toggle="tooltip" title="Editar"></i>
    <% end %>
    <%= link_to professors_meeting_path(meeting),
      method: :delete,
      data: { confirm: t('prompt.confirm') },
      class: 'destroy' do %>
      <i class="fe fe-trash" data-toggle="tooltip" title="Delete"></i>
    <% end %>
  </td>
</tr>
