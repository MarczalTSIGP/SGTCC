<% provide(:page_title, t('breadcrumbs.supervisions.history')) %>
<% provide(:head_title, t('breadcrumbs.supervisions.history')) %>

<div class="row">

   <div class="col-sm-12 col-lg-8">
      <search url="<%= external_members_supervisions_search_history_path %>"
            search-term="<%= params[:term] %>" />
   </div>

   <div class="col-sm-12 col-lg-4">
      <%= render 'shared/orientations/status_filter' %>
   </div>

         <div class="text-right mt-3">
            <%= page_entries_info @orientations %>
            <div class="legend">
               <p> <span class="status badge-approved-tcc-1"></span> Aprovada em TCC 1 </p>
               <p> <span class="status badge-approved"></span> Aprovada</p>
               <p> <span class="status badge-in-progress"></span> Em andamento</p>
               <p> <span class="status badge-canceled"></span> Cancelada</p>
               <p> <span class="status badge-reproved-tcc-1"></span> Reprovada em TCC 1</p>
               <p> <span class="status badge-reproved"></span> Reprovada</p>
            </div>
         </div>

         <div class="table-striped mt-3 table-responsive w-100">
            <table class="table card-table table-vcenter text-nowrap">
               <thead>
                  <tr>
                     <th><%= Orientation.human_attribute_name('status') %></th>
                     <th><%= Orientation.human_attribute_name('academic') %></th>
                     <th><%= Orientation.human_attribute_name('ra') %></th>
                     <th><%= Orientation.human_attribute_name('title') %></th>
                     <th><%= Orientation.human_attribute_name('advisor') %></th>
                     <th><%= Orientation.human_attribute_name('calendars') %></th>
                  </tr>
               </thead>
               <tbody>
                  <tr>
                     <%= render('shared/no_results') if @orientations.empty? %>
                  </tr>
                  <% @orientations.each do |orientation| %>
                     <%= render 'external_members/supervisions/orientation', orientation: orientation %>
                  <% end %>
               </tbody>
            </table>
         </div>
      </div>

      <%= paginate @orientations %>
