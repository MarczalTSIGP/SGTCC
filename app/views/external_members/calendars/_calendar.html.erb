<% orientation.calendars.each do |calendar| %>
  <tr>
    <td><%= calendar.year_with_semester %></td>
    <td><%= t("enums.tcc.#{calendar.tcc}") %></td>
    <td>
      <span data-toggle="tooltip" title="<%= orientation.title %>">
        <%= orientation.short_title %>
      </span>
    </td>
    <td><%= orientation.advisor.name %></td>
    <td>
      <% orientation.supervisors.each do |supervisor| %>
        <p class="m-0"><%= supervisor.name %></p>
      <% end %>
    </td>
    <td><%= short_date(calendar.created_at) %></td>
    <td>
      <%= link_to(external_members_calendar_activities_path(calendar)) do %>
        <i class="fe fe-search" data-toggle="tooltip" title="Visualizar"></i>
      <% end %>
    </td>
  </tr>
<% end %>
